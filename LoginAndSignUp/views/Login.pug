doctype html
html(lang='en' style="background-image: url('/css/login.jpg');")
    head
        link(rel="stylesheet" href="/css/mystyles.css")
        link(rel="stylesheet" href="/css/EchoLogo.css")
        script(type='text/javascript' src='/css/navMenu.js')
        title Login
    body(class="has-navbar-fixed-top")
        nav(class="navbar is-fixed-top is-primary" role="navigation" aria-label="main navigation")
            div(class="navbar-brand")
                a(class="navbar-item" href="#")
                    label(style="font-family:'Monoton';") ECHO

                a(role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navMenu")
                    span(aria-hidden="true")
                    span(aria-hidden="true")
                    span(aria-hidden="true")

            div(class="navbar-menu" id="navMenu")
                div(class="navbar-start")
                    a(class="navbar-item" href="#") Home

                div(class="navbar-end")
                    div(class="navbar-item")
                        div(class="buttons")
                            a(class="button is-primary" href="/SignUp")
                                strong Sign up

        div(id="container")
            p
                a(href="/Login") Echo

        div(style="background-color:#fff; border:2px solid #00aced; border-radius:8px; width:350px; padding:8px; margin:64px auto; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);")
            div(style="width:300px; margin:0 auto;")
                form(name='loginForm' action='LoginHandler' method='post' id="loginForm")
                    p(class="is-size-4" style="margin-top:16px;") Username
                    input(type='text' name='username' id="username" class="input is-medium is-primary")
                    span(id="usernameErr")
                    p(class="is-size-4") Password
                    input(type='password' name='password' id="password" class="input is-medium is-primary")
                    span(id="passwordErr")
                    br
                    div(style="display:flex; align-items:center; justify-content:center; margin-top:16px;")
                        input(type='submit' value='Login' class="button is-primary is-medium" style="width:175px;")

                    div(style="margin-top:50px; margin-left:124px;")
                        a(href="/SignUp") Sign Up
                        br
                        a(href="/PPT") Tutorial


        script(type='text/javascript' src='front-end-javascript/LoginValidation.js')