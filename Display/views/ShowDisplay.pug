doctype html
html(lang='en')
    head
        link(rel="stylesheet" href="/css/mystyles.css")
        script(type='text/javascript' src='/css/navMenu.js')
        style @import url('https://fonts.googleapis.com/css?family=Monoton');
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.3.0/viewer.css")
        script(type='text/javascript' src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.3.0/viewer.js")
        script(type='text/javascript' src='front-end-javascript/ShowDisplay.js')
        title Show Display
    body
        nav(class="navbar is-primary" role="navigation" aria-label="main navigation")
            div(class="navbar-brand")
                a(class="navbar-item" href="#")
                    label(style="font-family:'Monoton';") Echo

                a(role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navMenu")
                    span(aria-hidden="true")
                    span(aria-hidden="true")
                    span(aria-hidden="true")

            div(class="navbar-menu" id="navMenu")
                div(class="navbar-start")
                    a(class="navbar-item" href="/DisplayDashboard") Home

                div(class="navbar-end")
                    div(class="navbar-item")
                        div(class="buttons")
                            a(class="button is-primary" href="/Login")
                                strong Log Out
        div(style="margin:16px;")
            textarea(readonly=true name="currentState" id="currentState" hidden=true)=currentState
            textarea(readonly=true name="displayGroupID" id="displayGroupID" hidden=true)=displayGroupID

            button(type="button" class="btn btn-primary button is-primary" id="button")="Play demo"
            div(style="width:16px; height:auto; display:inline-block;")
            button(type="button" class="btn btn-primary button is-primary" id="testState")="testState"

            ul(style="list-style-type:none float:left; margin-top:16px;" id="images")
                each image in images
                    li
                        img(src="/userUpload/" + image.imageName alt=image.imageName style="max-width:100%; height:200px")
            ul(style="list-style-type:none" id="commands")
                each image in images
                    each command in image.imageCommand
                        textarea(readonly=true id="imageStartTime" hidden=true)=command.timeStart
                        textarea(readonly=true id="imageEndTime" hidden=true)=command.timeEnd
                        textarea(readonly=true id="interval" hidden=true)=command.timeDuration











        //div
            textarea(readonly=true name="currentState" id="currentState" hidden=true)=currentState
            textarea(readonly=true name="displayGroupID" id="displayGroupID" hidden=true)=displayGroupID

            button(type="button" class="btn btn-primary button is-primary is-medium" id="button")="Play demo"
            div(style="width:16px; height:auto; display:inline-block;")
            button(type="button" class="btn btn-primary button is-primary is-medium" id="testState")="testState"

            div(class="columns is-multiline is-mobile" id="images")
                each image in images
                    div(class="column is-one-quarter")
                        div(style="width:300px; margin:16px;")
                            img(src="/userUpload/" + image.imageName alt=image.imageName style="width:100%; height:200px")
                            br
                            div(id="commands")
                                each command in image.imageCommand
                                    textarea(readonly=true id="imageStartTime")=command.timeStart
                                    textarea(readonly=true id="imageEndTime")=command.timeEnd
                                    textarea(readonly=true id="interval")=command.timeDuration
