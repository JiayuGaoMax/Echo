doctype html
html(lang='en')
    head
        link(rel="stylesheet" href="/css/mystyles.css")
        title Manager
    body
        nav(class="navbar is-primary" role="navigation" aria-label="main navigation")
            div(class="navbar-brand")
                a(class="navbar-item" href="#")
                    img(src="" width="28px" height="28px")

            div(class="navbar-menu")
                div(class="navbar-start")
                    a(class="navbar-item" href="#") Home

                div(class="navbar-end")
                    div(class="navbar-item")
                        div(class="buttons")
                            a(class="button is-primary" href="/Login")
                                strong Log Out

        div(style="width:500px; height:500px; margin-left:16px; margin-top:16px;")
            h1(class="title is-2") Displays
            form(name='displayForm' action="/addDisplayGroup" method="post")
                div(style="width:500px; border:1px solid grey;")
                    div(style="margin-left:8px; margin-top:8px;")
                        ul(style="list-style-type:none" class="is-size-5")
                            each n in displayName
                                li
                                    a(href="EditDisplay/?groupID="+n._id style="margin-left:8px;") #{n.displayGroupName}
                            else
                                li No Display Groups
                div(style="text-align:right; margin-top:16px;")
                    input(type="text" name="addDisplay" placeholder="Add Display" id="addDisplay" class="input is-normal is-primary" style="width:250px;")
                    div(style="width:8px; height:auto; display:inline-block;")
                    input(type="submit" value="Add Display" class="button is-primary")